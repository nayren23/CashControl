<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/connexion_logo"
        android:layout_width="92dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:padding="8dp"
        android:src="@drawable/logo_cashcontrol"
        android:textSize="20dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/main_champ_identifiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Entrer votre identifiant"
        android:maxLength="25"
        />


    <EditText
        android:id="@+id/main_champ_adresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Entrer votre adresse mail"
        android:inputType="textEmailAddress"
        android:maxLength="40"
        />

    <EditText
        android:id="@+id/main_champ_numero_telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Entrer votre numéro de teléphone"
        android:inputType="phone"
        android:maxLength="10"
        />


    <EditText
        android:id="@+id/main_champ_mot_de_passe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Entrer votre mot de passe"
        android:inputType="textPassword"
        android:maxLength="30"
        />


    <Button
        android:id="@+id/button_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_weight="0"
        android:text="Prendre une Photo 😍"
        />


    <ImageView
        android:id="@+id/image_user"
        android:layout_width="383dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:ignore="VectorDrawableCompat" />

    <Button
        android:id="@+id/sauvegarde_compte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="139dp"
        android:layout_marginTop="10dp"
        android:text="S'inscrire 👋🏻"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        />


    <TextView
        android:id="@+id/connexion_text_view_inscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:text="Si vous avez un compte, "
        />

    <TextView
        android:id="@+id/connexion_text_view_connexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="60dp"
        android:clickable="true"
        android:text="Se connecter"
        android:textColor="@color/blue" />

</LinearLayout>