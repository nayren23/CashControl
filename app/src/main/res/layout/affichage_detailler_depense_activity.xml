<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AffichageDetaillerDepenseActiviy"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/depenseParCateorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voici vos dépenses par catégorie"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:textSize="20dp"
        android:textStyle="italic"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_Affichage_Detailler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/card_background_color"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/card_title_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subtitle"
                android:textColor="@color/card_subtitle_color"
                android:textSize="14sp" />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <ListView
        android:id="@+id/listeDepense"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/hidden_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/depense_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSmall" />


</LinearLayout>
